{
  "manifest_version": 2,
  "name": "Gists",
  "version": "1.0",
  "default_locale": "en",
  "description": "Show gists",
  "browser_action": {
    "default_title": "Gists",
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "open_in_tab": true
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}